<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.MainActivity"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <ImageView
        android:id="@+id/iv_enricsala"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@id/tv_next"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:src="@drawable/enrisala"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_etime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_enricsala"
        android:background="#000000"
        android:text="19:55"
        android:textColor="#FFFFFF"
        android:textSize="10dp" />



    <TextView
        android:id="@+id/tv_ename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_enricsala"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_toRightOf="@+id/iv_enricsala"
        android:text="Enric Sala"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_etopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_ename"
        android:layout_below="@id/tv_ename"
        android:layout_toRightOf="@id/iv_enricsala"
        android:text="Glimpsesof a pirstine oceann"
        android:textColor="#000000"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_pp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginStart="247dp"
        android:src="@drawable/ic_more_vert_black_24dp" />



</RelativeLayout>